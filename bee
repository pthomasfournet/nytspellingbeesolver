#!/usr/bin/env python3
"""
NYT Spelling Bee Solver - Command wrapper
Usage: ./bee [CENTER] [OUTER] [OPTIONS]
"""
import sys
import os

# Get the directory where this script is located
script_dir = os.path.dirname(os.path.abspath(__file__))

# Add the script directory to Python path
sys.path.insert(0, script_dir)

def show_help():
    """Display help information."""
    help_text = """
NYT Spelling Bee Solver

USAGE:
    ./bee [CENTER] [OUTER] [OPTIONS]
    ./bee                               # Interactive mode with hexagon
    ./bee P NOUCAT                      # Quick solve (shows top 46 words)
    ./bee P NOUCAT --top 20             # Show top 20 words
    ./bee P NOUCAT --all                # Show all words including obscure
    ./bee P NOUCAT --mark               # Interactive marking mode
    ./bee P NOUCAT --reset              # Reset puzzle progress

OPTIONS:
    --top N         Show top N most confident words (default: 46)
    --all, -a       Show all words including obscure ones
    --mark, -m      Interactive mode to mark found words
    --reset, -r     Reset saved progress for this puzzle
    --help, -h      Show this help message

EXAMPLES:
    ./bee                               # Interactive mode
    ./bee I BELCOT                      # Solve with center I, outer BELCOT
    ./bee P NOUCAT --top 30             # Show top 30 predictions
    ./bee I BELCOT --mark               # Mark words you've found
    
The solver uses enhanced filtering and aggregate scoring from multiple
dictionaries to provide the most likely NYT Spelling Bee word suggestions.
"""
    print(help_text)

def main():
    """Main wrapper function."""
    # Check for help flags first
    if len(sys.argv) > 1 and sys.argv[1] in ['-h', '--help']:
        show_help()
        return
    
    # Import and run the solver
    try:
        from spelling_bee_solver import main as solver_main
        solver_main()
    except ImportError as e:
        print(f"Error: Could not import spelling_bee_solver: {e}")
        sys.exit(1)
    except KeyboardInterrupt:
        print("\nExiting...")
        sys.exit(0)

if __name__ == "__main__":
    main()
