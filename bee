#!/usr/bin/env python3
"""
Wrapper script for NYT Spelling Bee Solver.

Usage:
    ./bee N ACUOTP              # Solve puzzle directly
    ./bee -i                    # Interactive mode
    ./bee --help                # Show help
"""

import sys
import subprocess

# Run the solver package (uses __main__.py)
result = subprocess.run(
    [sys.executable, "-m", "src.spelling_bee_solver"] + sys.argv[1:],
    cwd="/home/tom/spelling_bee_solver_project"
)

sys.exit(result.returncode)
