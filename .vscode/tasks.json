{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Solver",
      "type": "shell",
      "command": "python",
      "args": ["unified_solver.py", "${input:centerLetter}", "${input:outerLetters}"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Ruff",
      "type": "shell",
      "command": "ruff",
      "args": ["check", "unified_solver.py"],
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Fix with Ruff",
      "type": "shell",
      "command": "ruff",
      "args": ["check", "--fix", "unified_solver.py"],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "centerLetter",
      "type": "promptString",
      "description": "Center letter",
      "default": "I"
    },
    {
      "id": "outerLetters",
      "type": "promptString",
      "description": "Outer letters (6 letters)",
      "default": "BELCOT"
    }
  ]
}
