{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Solver",
      "type": "shell",
      "command": "python",
      "args": ["-m", "src.spelling_bee_solver.unified_solver", "${input:centerLetter}", "${input:outerLetters}"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "python",
      "args": ["-m", "pytest", "tests/", "-v"],
      "problemMatcher": [],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run Coverage",
      "type": "shell",
      "command": "coverage",
      "args": ["run", "-m", "pytest", "tests/", "&&", "coverage", "report"],
      "problemMatcher": [],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run Ruff Check",
      "type": "shell",
      "command": "ruff",
      "args": ["check", "src/", "tests/"],
      "problemMatcher": [],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Fix with Ruff",
      "type": "shell",
      "command": "ruff",
      "args": ["check", "--fix", "src/", "tests/"],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "centerLetter",
      "type": "promptString",
      "description": "Center letter",
      "default": "I"
    },
    {
      "id": "outerLetters",
      "type": "promptString",
      "description": "Outer letters (6 letters)",
      "default": "BELCOT"
    }
  ]
}
