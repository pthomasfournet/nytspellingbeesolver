{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Solve Puzzle",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/spelling_bee_solver/unified_solver.py",
      "console": "integratedTerminal",
      "args": ["IBELCOT", "--required", "I"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Solve Puzzle (Interactive)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/spelling_bee_solver/unified_solver.py",
      "console": "integratedTerminal",
      "args": ["--interactive"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Solve Puzzle (Debug Mode)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/spelling_bee_solver/unified_solver.py",
      "console": "integratedTerminal",
      "args": [
        "PNOUCAT",
        "--required",
        "P",
        "--mode",
        "debug_single",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_basic.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run Comprehensive Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_comprehensive.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
